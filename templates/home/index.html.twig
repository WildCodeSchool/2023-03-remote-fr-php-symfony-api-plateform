{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1 class="mb-5 text-center">My todo lists</h1>
    <div class="row">
        {% for i in 0..4 %}
            <div class="col-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-header">
                        List {{ loop.index }}
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            {% for i in 0..random(1, 7) %}
                                <li>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               role="switch"
                                               id="switch-{{ loop.parent.loop.index ~ loop.index }}" checked>
                                        <label class="form-check-label"
                                               for="switch-{{ loop.parent.loop.index ~ loop.index }}">
                                            item {{ loop.index }}</label>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
